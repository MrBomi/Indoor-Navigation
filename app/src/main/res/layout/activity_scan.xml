<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Map background (replace with MapView or ImageView as needed) -->
    <ImageView
        android:id="@+id/mapImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/map_placeholder" />

    <!-- Pin marker (centered) -->
    <ImageView
        android:id="@+id/pinMarker"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="120dp"
        android:src="@drawable/ic_location_pin"
        app:tint="@color/location_button_bg" />

    <!-- Bottom Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/bg_location_card"
        android:orientation="vertical"
        android:padding="24dp"
        android:elevation="8dp">

        <TextView
            android:id="@+id/tvNetworkTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connected Network :"
            android:textColor="@color/location_title"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvConnectedNetwork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/location_title"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Location"
            android:textColor="@color/location_label"
            android:textSize="14sp"
            android:layout_marginTop="18dp" />

        <TextView
            android:id="@+id/tvResults"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:textColor="@color/location_label"
            android:textSize="14sp"
            android:layout_marginTop="2dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EEE"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go to"
            android:textColor="@color/location_label"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <!-- Go to Options -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="1"
            android:layout_marginBottom="20dp">

            <!-- Home -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_marginEnd="8dp"
                app:cardBackgroundColor="#F8F8F8"
                app:cardCornerRadius="12dp"
                app:strokeColor="#FFF"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="12dp">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:background="@drawable/bg_icon_circle"
                        android:padding="4dp"
                        android:src="@drawable/ic_home"
                        app:tint="@color/location_icon_tint" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Home"
                        android:textColor="@color/location_title"
                        android:textSize="16sp"
                        android:layout_marginStart="8dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Office -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_marginStart="8dp"
                app:cardBackgroundColor="#F8F8F8"
                app:cardCornerRadius="12dp"
                app:strokeColor="#FFF"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="12dp">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:background="@drawable/bg_icon_circle"
                        android:padding="4dp"
                        android:src="@drawable/office_svgrepo_com"
                        app:tint="@color/location_icon_tint" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Office"
                        android:textColor="@color/location_title"
                        android:textSize="16sp"
                        android:layout_marginStart="8dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </GridLayout>

        <!-- Check Location Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnScan"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="8dp"
            android:text="Check Location"
            android:textColor="@color/location_button_text"
            android:textSize="18sp"
            app:cornerRadius="12dp"
            app:backgroundTint="@color/location_button_bg" />
    </LinearLayout>
</FrameLayout> 